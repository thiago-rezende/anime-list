{
  "name": "anime-list",
  "version": "1.0.0",
  "description": "Anime listing made simple",
  "repository": "https://github.com/thiago-rezende/anime-list",
  "author": "Thiago Rezende",
  "license": "BSD-3-Clause",
  "main": "dist/server.js",
  "bin": "dist/index.js",
  "private": true,
  "scripts": {
    "watch": "ts-node-dev -r dotenv/config -r tsconfig-paths/register --quiet --transpile-only src/index.ts",
    "keys:generate": "ts-node -r dotenv/config -r tsconfig-paths/register scripts/keys.ts generate",
    "db:create": "ts-node -r dotenv/config -r tsconfig-paths/register scripts/database/create.ts",
    "db:drop": "ts-node -r dotenv/config -r tsconfig-paths/register scripts/database/drop.ts",
    "db:sync": "ts-node -r dotenv/config -r tsconfig-paths/register scripts/database/sync.ts",
    "db:seed": "ts-node -r dotenv/config -r tsconfig-paths/register scripts/database/seed.ts",
    "db:setup": "yarn db:drop && yarn db:create && yarn db:sync && yarn db:seed",
    "test": "jest --setupFiles dotenv/config --verbose --silent --runInBand",
    "format": "prettier --write src scripts tests",
    "start": "node -r dotenv/config dist/index.js",
    "build": "tsc && resolve-tspaths",
    "lint": "eslint src/**/*.ts tests/**/*.spec.ts scripts/**/*.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.39",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "reflect-metadata": "^0.1.13",
    "resolve-tspaths": "^0.7.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "sequelize": "^6.21.2",
    "sequelize-typescript": "^2.1.3",
    "sqlite3": "^5.0.8"
  }
}
